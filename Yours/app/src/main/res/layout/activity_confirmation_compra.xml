<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.register.ConfirmationActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans"
        android:text="Parabéns, sua compra foi registrada com sucesso!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/open_sans"
        android:text="Você pode visualizar suas camisetas no menu e acompanhar suas compras pelo site!"
        android:textAlignment="center"
        android:textColor="@color/black75"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_button"
        android:text="@string/voltar_menu"
        android:onClick="startMenu"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/textAcompanhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:text="ou Acompanhe sua Compra"
        android:textColor="@color/blueLink"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="@font/open_sans"
        android:textColorHighlight="@color/secondaryPink" />

</LinearLayout>